{% extends 'base.html.twig' %}

{% block title %}BlogFoot - Liste des articles{% endblock %}

{% block body %}
    <h1>Liste des articles</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Contenu de l'article</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.title }}</td>
                <td>{{ article.content }}</td>
                <td>
                    <a href="{{ path('app_admin_article_show', {'id': article.id}) }}"><button class="btn btn-success">Regarder l'article</button></a>
                    <a href="{{ path('app_admin_article_edit', {'id': article.id}) }}"><button class="btn btn-secondary">Modifier l'article</button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun article disponible</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_article_new') }}"><button class="btn btn-primary">Ecrire un nouvel article</button></a>
{% endblock %}
