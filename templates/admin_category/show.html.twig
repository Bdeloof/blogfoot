{% extends 'base.html.twig' %}

{% block title %}BlogFoot - Catégories{% endblock %}

{% block body %}
    <h1>Catégories</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ category.name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_category_index') }}"><button class="btn btn-primary">Revenir à la liste des catégories</button></a>

    <a href="{{ path('app_admin_category_edit', {'id': category.id}) }}"><button class="btn btn-warning">Modifier la catégorie</button></a>

    {{ include('admin_category/_delete_form.html.twig') }}
{% endblock %}
