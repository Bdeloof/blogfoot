{% extends 'base.html.twig' %}

{% block title %}BlogFoot - Liste des commentaires{% endblock %}

{% block body %}
    <h1>Liste des commentaires</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Content</th>
                <th>CreatedAt</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            <tr>
                <td>{{ comment.content }}</td>
                <td>{{ comment.createdAt ? comment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_admin_comment_show', {'id': comment.id}) }}"><button class="btn btn-success">Regarder le commentaire</button></a>
                    <a href="{{ path('app_admin_comment_edit', {'id': comment.id}) }}"><button class="btn btn-secondary">Modifier le commentaire</button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Pas de commentaire trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_comment_new') }}"><button class="btn btn-primary">Créer un nouveau commentaire</button></a>
{% endblock %}
