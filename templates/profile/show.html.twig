{% extends 'base.html.twig' %}

{% block title %}BlogFoot - Profil{% endblock %}

{% block body %}
    <h1>Profil</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom d'utilisateur :</th>
                <td>{{ user.nickname }}</td>
            </tr>
            <tr>
                <th>Email :</th>
                <td>{{ user.email }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_profile_edit') }}"><button class="btn btn-lg btn-secondary">Modifier son compte utilisateur</button></a>
{% endblock %}
